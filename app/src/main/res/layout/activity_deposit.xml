<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DepositActivity"
    >

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#221C1C"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="WALLET BALANCE"
                android:textColor="#FFC107"
                android:textSize="19dp" />

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/walletbalance" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#fff"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:orientation="vertical"
        android:background="#EAA135"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EAA135"
        android:id="@+id/tool">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Deposit"
                    android:id="@+id/toolText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textColor="#fff"
                    android:layout_gravity="center">

                </TextView>
            </LinearLayout>

            <ImageView
                android:id="@+id/img"
                android:padding="3dp"
                android:background="@drawable/bacbtn"
                android:src="@drawable/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                ></ImageView>


            <ImageView
                android:id="@+id/img1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:padding="7dp"
                android:background="@drawable/bacbtn"
                android:src="@drawable/notification"
                android:layout_width="30dp"
                android:layout_height="30dp">
            </ImageView>
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_marginTop="70dp"
        android:background="@drawable/linearbg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="60dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginHorizontal="45dp"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deposit Coins *"
                android:textColor="#fff"
                android:textSize="16dp" />

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="#373636"
                android:layout_marginHorizontal="30dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <EditText
                    android:inputType="number"
                    android:id="@+id/edit"
                    android:textColorHint="#7E7676"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:hint="Enter coin"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </EditText>

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginHorizontal="45dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*Minimum deposit amount is coins"
                android:textColor="#fff"
                android:textSize="16dp" />


            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="7dp"
                app:cardBackgroundColor="#FFC107"
                android:layout_gravity="center"
                android:layout_width="220dp"
                android:layout_height="45dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Deposit Coins"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="19dp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>
    </LinearLayout>

</RelativeLayout>