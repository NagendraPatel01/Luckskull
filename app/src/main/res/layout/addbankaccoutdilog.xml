<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_marginHorizontal="20dp"
    android:background="@drawable/dilogbg">

    <LinearLayout
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:background="#2B2323"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="6dp"
                android:background="@drawable/alartshap"
                android:layout_alignParentRight="true"
               android:layout_marginRight="20dp"
                android:src="@drawable/closebtn"
                android:layout_width="35dp"
                android:layout_height="35dp">

            </ImageView>

        </RelativeLayout>
        <LinearLayout
            android:background="#2B2323"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:textColor="#fff"
                android:text="Add Your Bank Account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:layout_marginLeft="20dp"
                android:textSize="10dp"
                android:textColor="#fff"
                android:text="Adding Bank Details is mandatory for processing withdrawals."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <EditText
                android:id="@+id/edit"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="25dp"
                android:hint="Bank name"
                android:textColorHint="#fff"
                android:textColor="#fff"
                android:textSize="15dp"
                android:textStyle="bold" />

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:background="#fff">

            </View>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="25dp"
                android:text="Account Number *"
                android:textColor="#fff"
                android:textSize="12dp"
                android:textStyle="bold" />


                <EditText
                    android:id="@+id/edit1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="60dp"
                    android:background="@null"
                    android:textColor="#fff">

                </EditText>

            <View
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="30dp"
                android:background="#fff">

            </View>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="25dp"
                android:text="IFSC *"
                android:textColor="#fff"
                android:textSize="12dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/edit2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="60dp"
                android:background="@null"
                android:textColor="#fff">

            </EditText>

            <View
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="30dp"
                android:background="#fff">

            </View>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="25dp"
                android:text="Account Holder Name *"
                android:textColor="#fff"
                android:textSize="12dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/edit3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="60dp"
                android:background="@null"
                android:textColor="#fff">

            </EditText>

            <View
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="30dp"
                android:background="#fff">

            </View>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardview"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginHorizontal="80dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#FFC107"
                app:cardCornerRadius="7dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Submit"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </TextView>
            </androidx.cardview.widget.CardView>


        </LinearLayout>



    </LinearLayout>


</LinearLayout>