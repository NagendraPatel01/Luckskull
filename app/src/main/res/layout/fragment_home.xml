<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFragment"
    android:orientation="vertical"
    android:background="#EAA135">



  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="220dp">

      <LinearLayout
          android:gravity="center"
          android:layout_centerInParent="true"
          android:orientation="horizontal"
          android:layout_width="wrap_content"
          android:layout_height="match_parent">

          <LinearLayout
              android:id="@+id/Deposit"
              android:gravity="center"
              android:background="@drawable/lhomelinerar"
              android:layout_width="80dp"
              android:layout_height="150dp"
              android:orientation="vertical">

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:text="DEPOSIT"
                  android:textColor="#fff"
                  android:textSize="11dp" />

              <ImageView
                  android:layout_marginTop="13dp"
                  android:layout_width="60dp"
                  android:layout_height="50dp"
                  android:src="@drawable/uparrow"/>

          </LinearLayout>

          <androidx.cardview.widget.CardView
              android:layout_width="150dp"
              android:layout_height="match_parent"
              app:cardBackgroundColor="#2C2929"
              app:cardCornerRadius="20dp">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

                  <ImageView
                      android:layout_width="90dp"
                      android:layout_height="90dp"
                      android:layout_gravity="center"
                      android:layout_marginTop="10dp"
                      android:src="@drawable/logo">

                  </ImageView>

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginTop="30dp"
                      android:gravity="center"
                      android:text="Wallet Balance"
                      android:textColor="#fff"
                      android:textSize="16dp" />

                  <LinearLayout
                      android:id="@+id/linear"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="5dp"
                      android:gravity="center"
                      android:orientation="horizontal">

                      <ImageView

                          android:layout_width="30dp"
                          android:layout_height="30dp"
                          android:layout_gravity="center"
                          android:src="@drawable/walletbalance" />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="10dp"
                          android:gravity="center"
                          android:text="0"
                          android:textColor="#fff"
                          android:textSize="20dp" />

                  </LinearLayout>


              </LinearLayout>

          </androidx.cardview.widget.CardView>

          <LinearLayout
              android:id="@+id/withdraw"
              android:gravity="center"
              android:background="@drawable/lhomelinerarright"
              android:layout_width="80dp"
              android:layout_height="150dp"
              android:orientation="vertical">


              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:text="WITHDROW"
                  android:textColor="#fff"
                  android:textSize="11dp" />

              <ImageView
                  android:layout_marginTop="13dp"
                  android:layout_width="60dp"
                  android:layout_height="50dp"
                  android:src="@drawable/downarrow">

              </ImageView>

          </LinearLayout>


      </LinearLayout>


  </RelativeLayout>

  <LinearLayout
      android:layout_marginTop="30dp"
      android:background="@drawable/linearbg"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <ScrollView
          android:layout_width="match_parent"
          android:layout_height="match_parent">

      <LinearLayout
          android:layout_marginHorizontal="20dp"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="160dp"
              app:cardCornerRadius="15dp"
              android:layout_marginTop="20dp">

              <com.smarteist.autoimageslider.SliderView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  app:sliderAnimationDuration="600"
                  app:sliderScrollTimeInSec="1"
                  app:sliderIndicatorEnabled="false"
                  app:sliderStartAutoCycle="true"
                  android:id="@+id/slider">

              </com.smarteist.autoimageslider.SliderView>

          </androidx.cardview.widget.CardView>

          <androidx.cardview.widget.CardView
              android:id="@+id/card"
              app:cardCornerRadius="7dp"
              app:cardBackgroundColor="#222020"
              android:layout_width="match_parent"
              android:layout_marginTop="20dp"
              android:layout_height="50dp">

              <LinearLayout
                  android:gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal">

                  <ImageView
                      android:layout_width="25dp"
                      android:layout_height="25dp"
                      android:src="@drawable/add">

                  </ImageView>

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Create"
                      android:textColor="#fff"
                      android:textSize="20dp"
                      android:layout_marginLeft="12dp">

                  </TextView>

              </LinearLayout>

          </androidx.cardview.widget.CardView>

          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="160dp"
              app:cardCornerRadius="15dp"
              android:layout_marginTop="20dp">

              <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:src="@drawable/scrollimg"
                  android:scaleType="centerCrop">

              </ImageView>

          </androidx.cardview.widget.CardView>

          <TextView
              android:layout_marginTop="40dp"
             android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Tips Announcements"
              android:textColor="#FFC107"
              android:textSize="12dp"
              android:layout_marginLeft="12dp">

          </TextView>

          <TextView
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="IPL most trending site Goexch247.com"
              android:textColor="#FFFFFF"
              android:textSize="12dp"
              android:layout_marginLeft="12dp">

          </TextView>

          <androidx.cardview.widget.CardView
              android:layout_gravity="center"
              android:layout_marginBottom="70dp"
              android:layout_marginTop="30dp"
              app:cardCornerRadius="20dp"
              app:cardBackgroundColor="#5E5D5D"
              android:layout_width="200dp"
              android:layout_height="40dp">

              <LinearLayout
                  android:id="@+id/linear1"
                  android:gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal">

                  <ImageView
                      android:layout_width="25dp"
                      android:layout_height="25dp"
                      android:src="@drawable/whatsapp">

                  </ImageView>

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="WhatsApp Support"
                      android:textColor="#fff"
                      android:textSize="12dp"
                      android:layout_marginLeft="12dp">

                  </TextView>

              </LinearLayout>

          </androidx.cardview.widget.CardView>

      </LinearLayout>



      </ScrollView>

  </LinearLayout>

</LinearLayout>