<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#FFC107">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#3A3737">

        <TextView
            android:background="#2B2424"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="Select a Payment system">

        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="47dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#000"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="Payment gateway"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="Payment gateway system is only available for deposits upto Rs. 10,000"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></RadioButton>
        <androidx.cardview.widget.CardView
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#1C1818"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Upload payment screenshot"
                    android:textColor="#fff"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/add"
                        android:layout_width="20dp"
                        android:layout_height="20dp">

                    </ImageView>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Processing time"
                            android:textColor="#fff"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="15-30 mins"
                            android:textColor="#FFC107"
                            android:textSize="12dp" />



                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>

                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#fff"
                    android:layout_marginHorizontal="10dp">

                </View>

                <TextView
                    android:layout_marginTop="15dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="Supports"/>

                <TextView
                    android:textSize="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="Any UPI, Phonepe, Google Pay, Paytm, Paytm UPI  Bank Transfer."/>


                <RelativeLayout
                    android:layout_marginTop="25dp"
                    app:cardBackgroundColor="#1C1818"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/phonepay"
                        android:layout_width="35dp"
                        android:layout_height="35dp">

                    </ImageView>

                    <ImageView
                        android:layout_marginRight="26dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/goophone"
                        android:layout_width="35dp"
                        android:layout_height="35dp">

                    </ImageView>


                    <ImageView
                        android:layout_marginRight="52dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/googlepay"
                        android:layout_width="35dp"
                        android:layout_height="35dp">

                    </ImageView>


                    <ImageView
                        android:layout_marginRight="72dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/paytmupi"
                        android:layout_width="35dp"
                        android:layout_height="35dp">

                    </ImageView>


                    <ImageView
                        android:layout_marginRight="98dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/add"
                        android:layout_width="35dp"
                        android:layout_height="35dp">

                    </ImageView>


                </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="7dp"
            app:cardBackgroundColor="#292323"
          android:layout_marginLeft="47dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:textColorHint="#FFEB3B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </CheckBox>

                <TextView
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="Remembar my choice"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="47dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#FFC107"
            app:cardCornerRadius="7dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="PROCEED"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold">

            </TextView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="PROCEED"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>



    </LinearLayout>

</androidx.cardview.widget.CardView>